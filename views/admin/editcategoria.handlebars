    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}


<h3>Editar Categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/update/{{categoria._id}}" method="post">
            <label for="nome">Categoria</label>
            <input class="form-control" type="text" name="nome" value="{{categoria.nome}}">
            <label for="slug">Slug</label>
            <input class="form-control" type="text" name="slug" id="slug" value="{{categoria.slug}}">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <br>
            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>