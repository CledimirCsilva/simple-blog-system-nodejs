{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="container">

    <h1>Postagens</h1>
    <hr>
    {{categorias}}

    <a href="/admin/postagem/add"><button class="btn btn-success">Nova postagem</button></a>
    {{#each postagens}}
        <div class="card mt-4">
            <div class="card-body">
                <h4>{{ titulo }}</h4>
                <h5>{{ descricao }}</h5>
                <small>{{categorias.nome}}</small>
                <a href="/admin/postagem/edit/{{ _id }}">
                    <button class="btn btn-success">Editar</button>
                </a>
                <a href="/admin/postagem/del/{{ _id }}">
                    <button class="btn btn-danger">Excluir</button>
                </a>
            </div>
            
        </div>
    {{else}}

    {{/each}}
    
</div>

    

